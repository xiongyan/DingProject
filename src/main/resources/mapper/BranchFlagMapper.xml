<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.project.dao.BranchFlagDao" >

    <select id="getBranchFlags" resultType="com.project.model.Branch">
        select id,name,address,longitude,latitude,details,flag
        from branchs
    </select>

    <select id="getBranch" resultType="com.project.model.Branch" parameterType = "int">
        select id,name,address,longitude,latitude,details,flag
        from branchs
        WHERE id = #{branchId}
    </select>

    <!-- 新增支部 -->
    <insert id="createBranchFlag" parameterType="com.project.model.Branch" >
        insert into branchs
        (name,address,longitude,latitude,details,flag)
        values
        (#{name}, #{address},#{longitude},#{latitude},#{details},#{flag})
    </insert>

    <!--删除该支部信息-->
    <delete id="deleteBranch" parameterType="int">
        DELETE FROM branchs WHERE id = #{branchId}
    </delete>

    <!-- 更新支部信息-->
    <update id="UpdateBranch" parameterType="com.project.model.Branch" >
        update branchs
        <set >
            <if test="name != null and name != ''" >
                name = #{name},
            </if>
            <if test="address != null  and address != ''" >
                address = #{address},
            </if>
            <if test="longitude != null and longitude != ''" >
                longitude = #{longitude},
            </if>
            <if test="latitude != null  and latitude != ''" >
                latitude = #{latitude},
            </if>
            <if test="details != null  and details != ''" >
                details = #{details},
            </if>
            <if test="flag != null" >
                flag = #{flag},
            </if>
        </set>
        where id = #{id}
    </update>

</mapper>